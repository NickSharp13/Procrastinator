@model Procrastinator.Models.CourseSelectionViewModel
@{
    ViewBag.Title = "Courses";
}

<body>

    <div id="main-content">
        <div class="container">
            <h4>Add courses to your schedule:</h4>
            <form class="form-inline" action="~/Home/Events" method="post">
                <div id="courseContainer" style="display: none">
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.SelectedSubjectType, new SelectList(Model.SubjectTypes, "SubjectTypeId", "Subject"), "Select a Subject", new { @id = "subject", @class = "form-control", style = "width: 180px;" })
                        @Html.DropDownListFor(m => m.SelectedCourses, new SelectList(Model.Courses, "Id", "Description"), "Select a Course", new { @id = "course", @class = "form-control", style = "width: 280px;" })
                        <span class="glyphicon glyphicon-trash form-group" style="font-size:20px"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="hidden" id="end">
                    <button type="button" id="addCourse" class="btn btn-primary">Add Course</button>
                    <button type="submit" class="btn btn-primary">Next</button>
                </div>
            </form>
            <hr />
            <div class="slider text-center">
                <img src="~/img/quote.png" alt="quote" height="200" />
            </div>
        </div>
    </div>

</body>

@Scripts.Render("~/Scripts/CourseSelection.js")
